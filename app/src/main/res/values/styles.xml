<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="colorPrimaryDark">@color/secondary</item>

        <item name="actionBarStyle">@style/ActionBar.Solid.MyAppTheme</item>
        <item name="homeAsUpIndicator">@mipmap/back</item>
    </style>

    <style name="ActionBar.Solid.MyAppTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/main</item>
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NoActionBarThem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/main</item>
        <item name="colorAccent">@color/secondary</item>
    </style>

    <style name="NoActionBarThemWithSolidNav" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorAccent">@color/secondary</item>
    </style>

    <style name="TextInputLayout.White" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
